<%- include('partials/header.ejs') %>
  <title>Manage Users</title>

</head>
<body>
 

  <!-- user  -->
   <body>
  <nav class="navbar">
    <h1>Admin Panel</h1>
    <div class="nav-links">
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/wordbank">Word Bank</a>
      <a href="/admin/logout" class="logout">Logout</a>
    </div>
  </nav>

  <main class="container">
    <h2>All Registered Users</h2>

    <% if (locals.error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (users && users.length > 0) { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>UID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.uid %></td>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td>
                <form method="POST" action="/admin/deleteUser" onsubmit="return confirmDelete('<%= user.full_name %>')">
                  <input type="hidden" name="userUid" value="<%= user.uid %>">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No users found.</p>
    <% } %>

    <form method="POST" action="/admin/deleteUsers" onsubmit="return confirmDeleteAll()" class="delete-all">
      <button type="submit" class="danger-btn">Delete All Users</button>
    </form>
  </main>

  <script>
    function confirmDelete(name) {
      return confirm(`Are you sure you want to delete user "${name}"?`);
    }

    function confirmDeleteAll() {
      return confirm("Are you sure you want to delete ALL users?");
    }
  </script>

  
</body>
</html>

