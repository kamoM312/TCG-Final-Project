<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Manage Users</title>
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <nav class="navbar">
    <h1>Admin Panel</h1>
    <div class="nav-links">
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/logout">Logout</a>
    </div>
  </nav>

  <main class="container">
    <h2>All Registered Users</h2>

    <% if (locals.error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (users && users.length > 0) { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>UID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.uid %></td>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td>
                <form method="POST" action="/admin/deleteUser" style="display:inline;">
                  <input type="hidden" name="userUid" value="<%= user.uid %>">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No users found.</p>
    <% } %>

    <form method="POST" action="/admin/deleteUsers">
      <button type="submit" class="danger-btn">Delete All Users</button>
    </form>
  </main>
</body>
</html>

